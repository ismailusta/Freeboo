<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SignUpEmailLoginFragment">

    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log in"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_margin="20dp"
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="12dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#5CB10808"
                tools:src="@android:drawable/ic_dialog_email"/>

            <EditText
                android:id="@+id/edittextloginMail"
                android:layout_width="231dp"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Mail gir"
                android:inputType="textEmailAddress" />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="12dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#83000000"
                tools:src="@android:drawable/ic_lock_idle_lock"/>

            <EditText
                android:id="@+id/edittextloginPassword"
                android:layout_width="231dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword" />
        </LinearLayout>

        <Button
            android:id="@+id/btnloginRegister"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="Register"  />

        <TextView
            android:layout_margin="20dp"
            android:id="@+id/txtnotmember"
            android:height="48dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:clickable="true"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#9C27B0"
            android:text="If u not a member be register" />

        <TextView
            android:layout_margin="20dp"
            android:height="48dp"
            android:id="@+id/txtforgotpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:clickable="true"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#9C27B0"
            android:text="Forgot Password" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>